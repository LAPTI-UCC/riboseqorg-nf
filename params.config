params {
    // Output directory
    outdir = "./results"

    // Reference genome paths (REQUIRED - update these to your local paths)
    // Placeholder paths below work for stub testing, replace with real paths for actual runs
    star_index = "${projectDir}/test-data"
    bowtie_index = "${projectDir}/test-data"
    rRNA_index = "${projectDir}/test-data"
    gtf = "${projectDir}/test-data/test-sample-sheet.csv"
    genome_fasta = "${projectDir}/test-data/test-sample-sheet.csv"
    chrom_sizes_file = "${projectDir}/test-data/test-sample-sheet.csv"
    ribometric_annotation = "${projectDir}/test-data/test-sample-sheet.csv"
    annotation_sqlite = "${projectDir}/test-data/test-sample-sheet.csv"

    // Alignment parameters
    mismatches = 3
    alignment_type = "EndToEnd"
    allow_introns = true
    max_multimappers = 10  // Maximum number of mapping locations allowed per read
    min_mapq = 0           // Minimum mapping quality (0 = disabled)
    rrna_removal_method = 'bowtie' // Options: 'bowtie' or 'ribodetector'
    ribodetector_args = ''         // Optional extra args for RiboDetector CLI

    // Sample sheet (use test data by default)
    sample_sheet = "${projectDir}/test-data/test-sample-sheet.csv"

    // Adapter finding
    use_architecture_detection = false  // Enable to use getRPF architecture detection
    adapter_list = "${projectDir}/resources/adapter_list.tsv"

    // Data fetching
    fetch = false
    force_fetch = false
    collapsed_read_path = "${projectDir}/test-data"
    collapsed_read_header_pattern = 'seq{id}_x{count}'

    // Output options
    save_star_transcriptome_bam = false

    // Trimming
    trim_front = 0  // Number of bases to trim from 5' end
}
